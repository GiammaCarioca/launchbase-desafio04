{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

  <a href="/students/create">Novo</a>

	<table width="100%">
    <thead>
      <tr>
        <th>Nome Completo</th>
        <th>Email</th>
        <th>Ano Escolar</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for student in students %}
      <tr>
        <td>
          <span style="background-image: url({{student.avatar_url}})">
        </span>
          {{ student.full_name }}</td>
        <td>{{ student.email }}</td>
        <td>{{ grade(student.grade) }}</td>
        <td>
          <a href="/students/{{student.id}}">ver</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<script src="/scripts.js"></script>

{% endblock %}
