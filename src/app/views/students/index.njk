{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

  <a href="/students/create">Novo</a>

	<table width="100%">
    <thead>
      <tr>
        <th>Nome Completo</th>
        <th>Acompanhamento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for teacher in teachers %}
      <tr>
        <td>
          <span style="background-image: url({{teacher.avatar_url}})">
        </span>
          {{ teacher.full_name }}</td>
        <td>{{ teacher.fields_of_study }}</td>
        <td>
          <a href="/teachers/{{teacher.id}}">ver</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<script src="/scripts.js"></script>

{% endblock %}
